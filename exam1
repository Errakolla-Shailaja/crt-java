import java.util.*;
class Test{
    public static void main(String[] args) {
        	Scanner s=new Scanner(System.in);
	int n=s.nextInt();
	int c=1;
	for(int i=1;i<=n;i++)
	if(i%4!=0){
	if(c%2==0){
	    System.out.print(-i+" ");
